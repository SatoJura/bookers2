<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--<script src="https://kit.fontawesome.com/4bdd89c768.js" crossorigin="anonymous"></script>-->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(:id) , class:"nav-link text-light" do %>
              <i class="fas fa-house"></i>
              Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", users_path, class:"nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to "Books", books_path, class:"nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to "logout", destroy_user_session_path, method: :delete, class:"nav-link text-light" %>
          <% else %>
            <li class="nav-item">
              <%= link_to root_path, class:"nav-link text-light" do %>
              <i class="fas fa-house"></i>
              Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "  About", homes_about_path, class:"fas fa-house nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to "sign up", new_user_registration_path, class:"nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to "login", new_user_session_path, class:"nav-link text-light" %>
            </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
