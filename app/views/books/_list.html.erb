<div class="col-md-3">
<h2>User info</h2>
  <%= attachment_image_tag book.user, :profile_image, :fill,100,100, format:"jpg", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= book.user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model:book, local:true do |f| %>
    <div class="form-group">
      <%= f.label(:book_new_title,"Title") %>
      <%= f.text_field :title, class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <%= f.label(:book_new_opinion, "Opinion")%>
      <%= f.text_area :body, class:"form-control book_body" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  <% end %>
</div>