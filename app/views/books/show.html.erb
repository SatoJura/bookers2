<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render "books/list", user:@book.user, book_new:@book_new %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
         <tbody>
           <tr>
             <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, size:"40x40", fallback: "no_image.jpg" %>
                <% end %>
                </br>
                <%= link_to @book.user.name, user_path(current_user) %>
             </td>
             <td>
               <%= link_to @book.title, book_path(@book) %>
             </td>
             <td>
               <%= @book.body %>
             </td>
             
             <% if @book.user_id == current_user.id %>
             <td>
               <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
             </td>
             <td>
               <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？"  %>
             </td>
             <% end %>
           </tr>
         </tbody>
      </table>
    </div>
  </div>
</div>